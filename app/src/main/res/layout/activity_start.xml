<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_coordinator_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">

            <FrameLayout
                android:id="@+id/banner"
                android:layout_marginTop="56dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fitsSystemWindows="true"
                android:background="@drawable/banner_img"
                app:layout_collapseMode="parallax">

                <TextView
                    android:text="Выберите режим обучения"
                    android:textColor="#222222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="32dp"/>

                <Button xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fast_training_btn"
                    android:text="БЫСТРАЯ ТРЕНИРОВКА"
                    android:layout_width="239dp"
                    android:layout_height="44dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="#ffdd60"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:textAllCaps="true"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16sp"/>

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" -->
                    <!--android:src="@drawable/settings"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:layout_margin="16dp" />-->
            </FrameLayout>

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                tools:ignore="Overdraw"
                app:layout_collapseMode="pin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:id="@+id/toolbar_title"
                    android:textSize="20sp"
                    android:textColor="#222222"
                    android:textAlignment="center"/>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:orientation="vertical"
                android:elevation="0dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex1"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:elevation="4dp"
                    android:textColor="#222222"
                    android:shadowColor="#ffffff"
                    android:onClick="onClick"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex2"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex3"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex4"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex5"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:id="@+id/button"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex6"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex7"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/ex8"
                    android:background="#fafafa"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />
                <Button
                    android:layout_width="239dp"
                    android:layout_height="56dp"
                    android:text="@string/exFast"
                    android:background="#ffdd60"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:shadowRadius="2"
                    android:textColor="#222222"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:onClick="onClick"
                    />
                <!--<Button-->
                    <!--android:id="@+id/fast_training_btn2"-->
                    <!--android:text=-->
                    <!--android:layout_width="239dp"-->
                    <!--android:layout_height="44dp"-->
                    <!--android:background=-->
                    <!--android:textSize="16sp"-->
                    <!--android:textColor="#222222"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:layout_marginBottom="16sp"/>-->
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>