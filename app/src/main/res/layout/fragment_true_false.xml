<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="#fafafa"
        android:id="@+id/cardView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa">

            <TextView
                android:id="@+id/txt_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="en"
                android:textAllCaps="false"
                android:textColor="#222222"
                android:textSize="48sp"
                android:layout_above="@+id/txt_ru"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txt_ru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="ru"
                android:textAllCaps="false"
                android:textColor="#222222"
                android:textSize="48sp"
                android:layout_marginBottom="92dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_incorect"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:background="#fafafa"
        android:text="@string/incorrect"
        android:textColor="#222222"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/cardView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/btn_corect"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:background="#fafafa"
        android:text="@string/correct"
        android:textColor="#222222"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/btn_incorect"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Верный ли перевод?"
        android:gravity="center_horizontal"
        android:id="@+id/textView"
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/cardView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
