<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/list_fragment_item_cards"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="КАРТОЧКИ"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                android:elevation="4dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ПРОГОВАРИВАНИЕ СЛОВ"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="СЛОВО НА СЛУХ"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ПОИСК ПАРЫ"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="СОСТАВЛЕНИЕ СЛОВА"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                />
            <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ВЕРНО-НЕВРЕНО"
            android:background="#fafafa"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:shadowRadius="2"
            />
            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ВЫБОР ПЕРЕВОДА"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ПЕРЕВОД НА КАРТИНКЕ"
                android:background="#fafafa"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:shadowRadius="2"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>